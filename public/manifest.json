{
    "manifest_version": 3,
    "name": "YouTube Auto Pause/Resume",
    "version": "1.0",
    "description": "Automatically pauses and resumes YouTube videos when you switch windows or tabs.",
    "permissions": ["tabs", "scripting", "storage", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  